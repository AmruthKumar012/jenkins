pipeline {
agent none
environment {
    TEST="test_value"
    BUILD_NAME = "test_value2"
}

   stages{
      stage('Build') 
      {

        agent {
         label 'slave1'
              }

        steps {
            sh '''
            echo $TEST $BUILD_NAME
            sleep 5'''
               }
       }

    stage('Test') 
    {
      agent {
        label'slave2'
      }
        steps {
          script {
            echo "${env.TEST}"
          }
        }
    }
}
}

    
    
        
    
