pipeline {
agent none
environment {
    TEST="test_value"
    TEST1 ="test_value1"
}

   stages{
      stage('Build') 
      {

        agent {
         label 'slave1'
              }

        steps {
            sh '''
            echo $TEST $TEST1
            sleep 5'''
               }
       }

    stage('Test') 
    {
      agent {
        lable 'slave2'
      }
        steps {
            sh '''
            #!/bin/bash
            echo $TEST 
            echo $TEST1
            ls -lrt
            sleep 5
            '''
        }
    }
}
}

    
    
        
    
